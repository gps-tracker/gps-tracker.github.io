			{{/even}}
				<div class="col s12 m3 l2 center">
					<img class="responsive-img otras-ventajas"  src="{{this.img}}" alt="{{this.titulo}}">
				</div>
				<div class="col s12 m9 l4">
					<p><span class=" bold">{{this.titulo}} </span>
